<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:card_view="http://schemas.android.com/apk/res-auto">

  <data>
    <import type="grand.app.moon.presentation.base.utils.Constants" />
    <import type="grand.app.moon.presentation.filter.FILTER_TYPE" />
    <import type="android.view.View" />

    <variable
      name="itemViewModels"
      type="grand.app.moon.presentation.filter.viewModels.ItemFilterViewModel" />

  </data>

  <LinearLayout
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dimen6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
      style="@style/boldFont"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dimen8"
      android:layout_marginStart="@dimen/dimen16"
      android:layout_marginEnd="@dimen/dimen16"
      android:layout_marginBottom="@dimen/dimen4"
      android:text="@{itemViewModels.model.name}"
      android:textAlignment="viewEnd"
      android:textSize="@dimen/text_size16"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:textColor="@color/black"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="@string/contact_us" />

    <com.google.android.material.card.MaterialCardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:visibility="@{!itemViewModels.isEditText ? View.VISIBLE : View.GONE, default = gone}"
      android:layout_marginStart="@dimen/dimen16"
      card_view:cardUseCompatPadding="true"
      android:layout_marginEnd="@dimen/dimen16"
      app:cardCornerRadius="@dimen/dimen6"
      app:cardElevation="@dimen/dimen4">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/tv_more_item"
          style="@style/mediumFont"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/dimen8"
          android:layout_marginTop="@dimen/dimen16"
          android:layout_marginBottom="@dimen/dimen16"
          android:textSize="@dimen/text_size14"
          android:text="@{itemViewModels.model.selectedText}"
          android:textAlignment="viewEnd"
          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
          android:textColor="@color/black"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="@string/all" />

        <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/btn_details"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/dimen16"
          android:src="@drawable/ic_more"
          android:rotation="180"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
      android:layout_marginStart="@dimen/dimen16"
      android:layout_marginEnd="@dimen/dimen16"
      android:weightSum="2"
      android:visibility="@{itemViewModels.isEditText ? View.VISIBLE : View.GONE, default = gone}"
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">


      <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/dimen5"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/dimen6"
        app:cardElevation="@dimen/dimen4">

        <androidx.appcompat.widget.AppCompatEditText
          android:id="@+id/edt_from"
          style="@style/regularFont"
          android:textColorHint="#4A4A4A"
          android:layout_gravity="center"
          android:padding="@dimen/dimen2"
          android:layout_marginEnd="@dimen/dimen5"
          android:layout_marginStart="@dimen/dimen5"
          android:layout_marginTop="@dimen/dimen10"
          android:layout_marginBottom="@dimen/dimen10"
          android:drawableEnd="@drawable/ic_down"
          android:drawablePadding="@dimen/dimen2"
          android:text="@={itemViewModels.model.from}"
          android:background="@drawable/corner_white"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="@dimen/text_size12"
          android:inputType="number"
          android:hint="@string/to"
          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
          android:textColor="@color/black"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="@string/to" />

      </com.google.android.material.card.MaterialCardView>
      <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/dimen5"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/dimen6"
        app:cardElevation="@dimen/dimen4">

        <androidx.appcompat.widget.AppCompatEditText
          android:id="@+id/edt_to"
          style="@style/regularFont"
          android:textColorHint="#4A4A4A"
          android:layout_gravity="center"
          android:padding="@dimen/dimen2"
          android:layout_marginEnd="@dimen/dimen5"
          android:layout_marginStart="@dimen/dimen5"
          android:layout_marginTop="@dimen/dimen10"
          android:inputType="number"
          android:layout_marginBottom="@dimen/dimen10"
          android:drawableEnd="@drawable/ic_down"
          android:drawablePadding="@dimen/dimen2"
          android:text="@={itemViewModels.model.to}"
          android:background="@drawable/corner_white"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="@dimen/text_size12"
          android:hint="@string/to"
          android:textAppearance="@style/TextAppearance.AppCompat.Medium"
          android:textColor="@color/black"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="@string/to" />

      </com.google.android.material.card.MaterialCardView>


    </LinearLayout>


  </LinearLayout>


</layout>