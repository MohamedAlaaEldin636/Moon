<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>
    <import type="android.view.View" />
    <variable
      name="viewModel"
      type="grand.app.moon.presentation.map.viewModel.MapSubCategoryViewModel" />

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.fragment.app.FragmentContainerView
      android:id="@+id/mapView"
      android:name="com.google.android.gms.maps.SupportMapFragment"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_stories"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:adapter="@{viewModel.categoriesAdapter}"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:orientation="@{`2`}"
      app:span="@{`1`}"
      tools:listitem="@layout/item_category_text" />


    <com.google.android.material.card.MaterialCardView
      android:id="@+id/item_ads_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/dimen8"
      android:layout_weight="1"
      android:visibility="@{viewModel.showAdvertisement ? View.VISIBLE : View.GONE}"
      app:cardCornerRadius="@dimen/dimen12"
      app:cardElevation="@dimen/dimen1"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/dimen5"
        android:layout_height="wrap_content">


        <com.google.android.material.imageview.ShapeableImageView
          android:id="@+id/img_ads"
          android:layout_width="@dimen/dimen120"
          android:layout_height="@dimen/dimen120"
          android:layout_margin="@dimen/dimen6"
          android:scaleType="centerCrop"
          app:defaultImage="@{@drawable/corner_primary}"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:loadImage="@{viewModel.advertisement.image}"
          app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/item_ads_title"
          style="@style/mediumFont"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/dimen4"
          android:layout_marginStart="@dimen/dimen10"
          android:layout_marginTop="@dimen/dimen2"
          android:layout_marginEnd="@dimen/dimen10"
          android:ellipsize="end"
          android:lines="1"
          android:maxLines="1"
          android:text="@{viewModel.advertisement.title}"
          android:textAlignment="viewStart"
          android:textColor="@color/colorPrimaryDark"
          android:textSize="@dimen/text_size14"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/img_ads"
          app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/item_ads_price"
          style="@style/boldFont"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/dimen4"
          android:layout_marginStart="@dimen/dimen10"
          android:layout_marginTop="@dimen/dimen2"
          android:text="@{viewModel.advertisement.price + ` `+viewModel.advertisement.country.currency}"
          android:textAlignment="viewStart"
          android:textColor="@color/colorBlack"
          android:textSize="@dimen/text_size16"
          app:layout_constraintStart_toEndOf="@+id/img_ads"
          app:layout_constraintTop_toBottomOf="@+id/item_ads_title" />

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/item_ads_is_negotiable"
          style="@style/regularFont"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/dimen4"
          android:layout_marginStart="@dimen/dimen3"
          android:layout_marginTop="@dimen/dimen2"
          android:gravity="center"
          android:text="@{viewModel.advertisement.isNegotiable == 1 ? @string/has_negatiable : @string/not_negatiable }"
          android:textColor="@color/greyText"
          android:textSize="@dimen/text_size12"
          app:layout_constraintStart_toEndOf="@+id/item_ads_price"
          app:layout_constraintTop_toBottomOf="@+id/item_ads_title" />


        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/item_ads_location"
          style="@style/mediumFont"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/dimen10"
          android:layout_marginTop="@dimen/dimen4"
          android:layout_marginBottom="@dimen/dimen6"
          android:drawableStart="@drawable/ic_pin"
          android:drawablePadding="@dimen/dimen10"
          android:text="@{viewModel.advertisement.country.name + ` / ` +viewModel.advertisement.city.name}"
          android:textColor="@color/greyText"
          android:textSize="@dimen/text_size12"
          app:layout_constraintStart_toEndOf="@+id/item_ads_time"
          app:layout_constraintTop_toBottomOf="@+id/item_ads_price" />

        <androidx.appcompat.widget.AppCompatTextView
          android:id="@+id/item_ads_time"
          style="@style/mediumFont"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/dimen4"
          android:layout_marginBottom="@dimen/dimen6"
          android:layout_marginStart="@dimen/dimen3"
          android:drawableStart="@drawable/ic_time"
          android:drawablePadding="@dimen/dimen10"
          android:text="@{viewModel.advertisement.createdAt}"
          android:textColor="@color/greyText"
          android:textSize="@dimen/text_size12"
          app:layout_constraintStart_toEndOf="@+id/img_ads"
          app:layout_constraintTop_toBottomOf="@+id/item_ads_price" />


        <LinearLayout
          android:id="@+id/linearLayout"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/dimen16"
          android:weightSum="3"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/img_ads"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/item_ads_time">


          <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="@{ (v) -> viewModel.whatsapp(v)}">

            <androidx.appcompat.widget.AppCompatImageView
              style="@style/mediumFont"
              android:layout_width="@dimen/dimen25"
              android:layout_height="@dimen/dimen25"
              android:layout_centerInParent="true"
              android:src="@drawable/ic_whatsapp" />

          </RelativeLayout>

          <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="@{ (v) -> viewModel.phone(v)}">

            <androidx.appcompat.widget.AppCompatImageView
              style="@style/mediumFont"
              android:layout_width="@dimen/dimen25"
              android:layout_height="@dimen/dimen25"
              android:layout_centerInParent="true"
              android:src="@drawable/ic_phone"
              android:tint="@color/colorPrimary" />


          </RelativeLayout>

          <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="@{ (v) -> viewModel.chat(v)}">

            <androidx.appcompat.widget.AppCompatImageView
              style="@style/mediumFont"
              android:layout_width="@dimen/dimen25"
              android:layout_height="@dimen/dimen25"
              android:layout_centerInParent="true"
              android:src="@drawable/ic_chat_ads" />

          </RelativeLayout>


        </LinearLayout>


      </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>