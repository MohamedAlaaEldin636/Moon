<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"

  tools:context="grand.app.moon.presentation.myStore.StoreSubCategoriesFragment">

  <data>
    <variable
      name="viewModel"
      type="grand.app.moon.presentation.myStore.viewModel.StoreSubCategoriesViewModel" />
  </data>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <include
      android:id="@+id/toolbarCurve"

      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      layout="@layout/item_toolbar_curve"

      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      style="@style/TextTajawalBold14"
      android:textSize="16sp"
      android:textColor="@color/colorPrimary"

      android:layout_marginTop="23dp"
      android:layout_marginStart="16dp"

      android:text="@string/your_store_sub_categories_2"/>

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerView"

      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"

      android:paddingEnd="8dp"
      android:paddingStart="8dp"
      android:paddingBottom="5dp"
      android:paddingTop="5dp"
      android:clipToPadding="false"

      android:scrollbars="vertical"
      tools:itemCount="3"
      app:spanCount="1"
      tools:orientation="vertical"
      tools:listitem="@layout/item_store_category"
      tools:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"

      app:layout_constraintTop_toBottomOf="@id/adsPromotionsTextView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:layout_marginTop="5dp"
      android:layout_marginBottom="17dp"
      android:layout_marginStart="27dp"
      android:layout_marginEnd="27dp"

      style="@style/TextTajawalMedium14"

      android:padding="16dp"

      android:gravity="center"
      android:textColor="@color/white"
      android:text="@string/add_new_sub_category"

      android:onClick="@{v -> viewModel.addNewCategory(v)}"

      android:background="@drawable/dr_rounded_5_button"/>

  </LinearLayout>

</layout>
