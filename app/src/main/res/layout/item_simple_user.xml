<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintLayout"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"

    android:background="@drawable/dr_rect_5"

    android:padding="0dp"
    android:clipToPadding="false">

    <com.google.android.material.imageview.ShapeableImageView
      android:id="@+id/imageView"

      android:layout_width="59dp"
      android:layout_height="63dp"

      android:layout_marginTop="9dp"
      android:layout_marginBottom="9dp"
      android:layout_marginStart="10dp"

      app:shapeAppearance="@style/ShapeRound5"
      app:shapeAppearanceOverlay="@style/ShapeRound5"

      tools:src="@drawable/ic_default_user"
      
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"/>
    
    <TextView
      android:id="@+id/textView"

      android:layout_width="0dp"
      android:layout_height="wrap_content"

      style="@style/TextTajawalMedium16"
      android:textDirection="locale"

      android:layout_marginStart="31dp"
      android:layout_marginEnd="6dp"

      tools:text="أحمد محمد"

      app:layout_constraintTop_toTopOf="@id/imageView"
      app:layout_constraintBottom_toBottomOf="@id/imageView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/imageView"/>

    <TextView
      android:id="@+id/createdAtTextView"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      style="@style/TextTajawalMedium14"
      android:textSize="10sp"
      android:textColor="#B3000000"

      android:layout_marginTop="9dp"
      android:layout_marginEnd="8dp"

      tools:text="18-8-2020"

      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
      android:id="@+id/countTextView"

      android:visibility="gone"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      style="@style/TextTajawalMedium14"
      android:textSize="12sp"
      android:textColor="@color/white"

      tools:text="305"

      android:paddingStart="9dp"
      android:paddingEnd="9dp"
      android:paddingTop="5dp"
      android:paddingBottom="2dp"
      android:includeFontPadding="false"

      android:background="@drawable/dr_end_bottom_and_top_start_5"
      android:backgroundTint="@color/colorPrimary"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>
    <!-- dr_end_bottom_and_top_start_5 -->

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
