<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

    <variable
      name="viewModel"
      type="grand.app.moon.presentation.splash.SplashViewModel" />
  </data>


  <RelativeLayout
    android:id="@+id/relativeLayout"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:src="@drawable/splash"
      imageView_setupWithGlideOrIgnore_drawableResName="@{`splash`}"
      android:scaleType="centerCrop" />

    <androidx.appcompat.widget.AppCompatImageView
      android:layout_width="@dimen/dimen220"
      android:src="@drawable/ic_logo_white_2"
      android:layout_centerInParent="true"
      android:layout_height="@dimen/dimen220"/>
  </RelativeLayout>


</layout>