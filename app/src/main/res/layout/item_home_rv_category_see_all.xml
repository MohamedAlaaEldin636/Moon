<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintLayout"

    android:layout_width="match_parent"
    tools:layout_width="80dp"
    android:layout_height="91dp"

    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"

    android:layout_gravity="center"

    android:background="@drawable/dr_rect_10">

    <TextView
      android:id="@+id/text1TextView"

      android:layout_width="0dp"
      android:layout_height="wrap_content"

      style="@style/TextTajawalMedium14"
      android:textColor="@color/colorPrimary"
      android:textDirection="locale"
      android:text="@string/see_all_ads"
      android:gravity="center"
      android:includeFontPadding="false"

      android:maxLines="2"
      android:ellipsize="end"

      android:layout_marginStart="11dp"
      android:layout_marginEnd="11dp"

      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@id/textNumOfAdsTextView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
      android:id="@+id/textNumOfAdsTextView"

      android:layout_width="0dp"
      android:layout_height="wrap_content"

      style="@style/TextTajawalBold14"
      android:textSize="16sp"
      android:textColor="@color/colorPrimary"
      android:textDirection="locale"
      tools:text="243132"
      android:gravity="center"
      android:includeFontPadding="false"

      android:singleLine="true"
      android:ellipsize="marquee"
      android:marqueeRepeatLimit ="marquee_forever"
      android:focusable="true"
      android:focusableInTouchMode="true"
      android:scrollHorizontally="true"
      textView_setSelectedBA="@{true}"

      android:layout_marginStart="11dp"
      android:layout_marginEnd="11dp"

      app:layout_constraintTop_toBottomOf="@id/text1TextView"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
