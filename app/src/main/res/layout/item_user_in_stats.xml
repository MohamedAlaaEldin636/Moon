<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintLayout"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"

    android:layout_gravity="center"

    android:background="@drawable/dr_rect_5">

    <com.google.android.material.imageview.ShapeableImageView
      android:id="@+id/imageImageView"

      android:layout_width="71dp"
      android:layout_height="71dp"

      app:shapeAppearance="@style/ShapeRound5"
      app:shapeAppearanceOverlay="@style/ShapeRound5"

      android:layout_marginStart="15dp"
      android:layout_marginTop="14dp"
      android:layout_marginBottom="14dp"

      android:scaleType="centerCrop"
      tools:src="@drawable/ic_default_user"
      
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>

    <TextView
      android:id="@+id/countTextView"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      style="@style/TextTajawalMedium14"
      android:textSize="12sp"
      android:textDirection="locale"
      android:textColor="@color/white"

      tools:text="320"

      android:paddingTop="5dp"
      android:paddingBottom="2dp"
      android:paddingStart="10dp"
      android:paddingEnd="9dp"
      android:includeFontPadding="false"

      android:background="@drawable/dr_rect_5_two_corners"

      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>
    
    <ImageView
      android:id="@+id/whatsappImageView"

      android:layout_width="28dp"
      android:layout_height="28dp"

      android:src="@drawable/whatsapp_in_stats"

      android:layout_marginTop="3dp"
      android:layout_marginEnd="5dp"

      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <TextView
      android:id="@+id/nameTextView"

      android:layout_width="0dp"
      android:layout_height="wrap_content"

      style="@style/TextTajawalBold14"
      android:textColor="@color/colorPrimary"
      android:textDirection="locale"
      android:maxLines="1"
      android:ellipsize="end"
      android:includeFontPadding="false"

      app:layout_constraintVertical_chainStyle="packed"

      tools:text="Hello"

      android:layout_marginStart="9dp"
      android:layout_marginBottom="4dp"
      android:layout_marginEnd="8dp"

      app:layout_constraintTop_toTopOf="@id/imageImageView"
      app:layout_constraintStart_toEndOf="@id/imageImageView"
      app:layout_constraintEnd_toStartOf="@id/whatsappImageView"
      app:layout_constraintBottom_toTopOf="@id/emailLabelTextView"/>
    <TextView
      android:id="@+id/emailLabelTextView"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      style="@style/TextTajawalMedium14"
      android:textSize="11sp"
      android:textColor="#727889"
      android:textDirection="locale"
      android:maxLines="1"
      android:ellipsize="end"
      android:includeFontPadding="false"

      android:text="@string/email_hint_3"

      android:layout_marginStart="9dp"
      android:layout_marginTop="4dp"
      android:layout_marginBottom="4dp"

      app:drawableStartCompat="@drawable/mail_in_stats"
      android:drawablePadding="3dp"

      android:gravity="center"

      app:layout_constraintTop_toBottomOf="@id/nameTextView"
      app:layout_constraintStart_toEndOf="@id/imageImageView"
      app:layout_constraintBottom_toTopOf="@id/phoneLabelTextView"/>
    <TextView
      android:id="@+id/emailValueTextView"

      android:layout_width="0dp"
      android:layout_height="wrap_content"

      style="@style/TextTajawalBold14"
      android:textSize="11sp"
      android:textColor="@color/colorPrimary"
      android:textDirection="locale"
      android:maxLines="1"
      android:ellipsize="end"
      android:includeFontPadding="false"

      tools:text="Hello"

      android:layout_marginStart="3dp"
      android:layout_marginEnd="8dp"

      app:layout_constraintTop_toTopOf="@id/emailLabelTextView"
      app:layout_constraintStart_toEndOf="@id/emailLabelTextView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="@id/emailLabelTextView"/>
    <TextView
      android:id="@+id/phoneLabelTextView"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      style="@style/TextTajawalMedium14"
      android:textSize="11sp"
      android:textColor="#727889"
      android:textDirection="locale"
      android:maxLines="1"
      android:ellipsize="end"
      android:includeFontPadding="false"

      android:text="@string/phone_hint_3"

      android:layout_marginStart="9dp"
      android:layout_marginTop="4dp"

      app:drawableStartCompat="@drawable/call_in_stats"
      android:drawablePadding="3dp"

      android:gravity="center"

      app:layout_constraintTop_toBottomOf="@id/emailLabelTextView"
      app:layout_constraintStart_toEndOf="@id/imageImageView"
      app:layout_constraintBottom_toBottomOf="@id/imageImageView"/>
    <TextView
      android:id="@+id/phoneValueTextView"

      android:layout_width="0dp"
      android:layout_height="wrap_content"

      style="@style/TextTajawalBold14"
      android:textSize="11sp"
      android:textColor="@color/colorPrimary"
      android:textDirection="locale"
      android:maxLines="1"
      android:ellipsize="end"
      android:includeFontPadding="false"

      tools:text="Hello"

      android:layout_marginStart="3dp"
      android:layout_marginEnd="8dp"

      app:layout_constraintTop_toTopOf="@id/phoneLabelTextView"
      app:layout_constraintStart_toEndOf="@id/phoneLabelTextView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="@id/phoneLabelTextView"/>

    <TextView
      android:id="@+id/dateTextView"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      style="@style/TextTajawalMedium14"
      android:textSize="9sp"
      android:textColor="#727889"
      android:textDirection="locale"
      android:includeFontPadding="false"

      tools:text="25 May 2022"

      android:layout_marginEnd="8dp"
      android:layout_marginTop="3dp"

      app:layout_constraintTop_toBottomOf="@id/phoneValueTextView"
      app:layout_constraintEnd_toEndOf="parent"/>

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
