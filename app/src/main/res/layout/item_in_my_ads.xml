<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"


  tools:ignore="SmallSp,ContentDescription">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintLayout"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_gravity="center"

    android:layout_margin="8dp"

    android:background="@drawable/dr_rect_7"

    android:elevation="7dp">

    <com.google.android.material.imageview.ShapeableImageView
      android:id="@+id/shapeableImageView"

      android:layout_width="104dp"
      android:layout_height="65dp"

      android:scaleType="centerCrop"

      tools:srcCompat="@drawable/splash"

      android:layout_margin="11dp"

      app:shapeAppearance="@style/ShapeRound5"
      app:shapeAppearanceOverlay="@style/ShapeRound5"
      android:background="@drawable/dr_rounded_5_text_field_with_bg"
      android:backgroundTint="@color/colorPrimary"

      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"

      android:orientation="horizontal"

      android:layout_margin="5dp"

      android:gravity="center_vertical"

      app:layout_constraintBottom_toBottomOf="@id/shapeableImageView"
      app:layout_constraintStart_toStartOf="@id/shapeableImageView"
      app:layout_constraintEnd_toEndOf="@id/shapeableImageView">

      <ImageView
        android:layout_width="12dp"
        android:layout_height="11dp"

        android:src="@drawable/ic_rate_32" />

      <TextView
        android:id="@+id/ratingTextView"

        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"

        style="@style/TextTajawalMedium14"
        android:textSize="8sp"

        android:layout_marginStart="2dp"

        android:gravity="center"

        android:maxLines="1"
        android:ellipsize="end"

        tools:text="( 3 )"
        android:textColor="@color/white" />

      <ImageView
        android:layout_width="12dp"
        android:layout_height="11dp"

        android:layout_marginStart="2dp"

        android:src="@drawable/ic_fav_32" />

      <TextView
        android:id="@+id/favsTextView"

        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"

        style="@style/TextTajawalMedium14"
        android:textSize="8sp"

        android:layout_marginStart="2dp"

        android:gravity="center"

        android:maxLines="1"
        android:ellipsize="end"

        tools:text="354"
        android:textColor="@color/white" />

      <ImageView
        android:layout_width="12dp"
        android:layout_height="11dp"

        android:layout_marginStart="2dp"

        android:src="@drawable/ic_views_32" />

      <TextView
        android:id="@+id/viewsTextView"

        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"

        style="@style/TextTajawalMedium14"
        android:textSize="8sp"

        android:layout_marginStart="2dp"

        android:gravity="center"

        android:maxLines="1"
        android:ellipsize="end"
        
        tools:text="985"
        android:textColor="@color/white" />

    </LinearLayout>
    
    <TextView
      android:id="@+id/createdAtTextView"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:textColor="#727889"
      style="@style/TextTajawalMedium14"
      android:textSize="9sp"

      tools:text="25 May 2022"

      android:layout_marginEnd="12dp"
      android:layout_marginBottom="6dp"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
      android:id="@+id/premiumImageView"

      android:layout_width="0dp"
      android:layout_height="0dp"

      android:src="@drawable/premium_32"

      tools:visibility="visible"

      app:layout_constraintHeight_percent="0.65"

      app:layout_constraintDimensionRatio="1:1"

      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
      android:id="@+id/titleTextView"

      android:layout_width="0dp"
      android:layout_height="wrap_content"

      android:textColor="#0D0633"
      style="@style/TextTajawalBold14"

      tools:text="For sale fwioje"

      android:textDirection="locale"

      android:maxLines="1"
      android:ellipsize="end"

      android:layout_marginBottom="1dp"
      android:layout_marginEnd="13dp"
      android:layout_marginStart="13dp"

      app:layout_constraintVertical_chainStyle="spread_inside"

      app:layout_constraintTop_toTopOf="@id/shapeableImageView"
      app:layout_constraintStart_toEndOf="@id/shapeableImageView"
      app:layout_constraintEnd_toStartOf="@id/premiumImageView"
      app:layout_constraintBottom_toTopOf="@id/priceTextView"/>

    <TextView
      android:id="@+id/priceTextView"

      android:layout_width="0dp"
      android:layout_height="wrap_content"

      android:textColor="#0D0633"
      style="@style/TextTajawalMedium14"
      android:textSize="11sp"

      tools:text="500 lkdsap"

      android:textDirection="locale"

      android:maxLines="1"
      android:ellipsize="end"

      android:layout_marginTop="1dp"
      android:layout_marginBottom="1dp"
      android:layout_marginEnd="13dp"
      android:layout_marginStart="13dp"

      app:layout_constraintTop_toBottomOf="@id/titleTextView"
      app:layout_constraintStart_toEndOf="@id/shapeableImageView"
      app:layout_constraintEnd_toStartOf="@id/premiumImageView"
      app:layout_constraintBottom_toTopOf="@id/categoryTextView"/>

    <TextView
      android:id="@+id/categoryTextView"

      android:layout_width="0dp"
      android:layout_height="wrap_content"

      android:textColor="#0D0633"
      style="@style/TextTajawalMedium14"
      android:textSize="11sp"

      tools:text="500 lkdsap"

      android:textDirection="locale"

      android:maxLines="1"
      android:ellipsize="end"

      android:layout_marginTop="1dp"
      android:layout_marginEnd="13dp"
      android:layout_marginStart="13dp"

      app:layout_constraintTop_toBottomOf="@id/priceTextView"
      app:layout_constraintStart_toEndOf="@id/shapeableImageView"
      app:layout_constraintEnd_toStartOf="@id/premiumImageView"
      app:layout_constraintBottom_toBottomOf="@id/shapeableImageView"/>

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
