<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintLayout"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_gravity="center"

    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"

    android:background="@drawable/dr_rect_5"
    android:backgroundTint="@color/white"
    tools:backgroundTint="@color/grey"

    android:paddingBottom="21dp"
    android:clipToPadding="false">

    <com.google.android.material.imageview.ShapeableImageView
      android:id="@+id/imageView"

      android:layout_width="71dp"
      android:layout_height="71dp"

      android:layout_margin="15dp"

      tools:src="@drawable/splash"
      tools:scaleType="centerCrop"

      app:shapeAppearance="@style/ShapeRound5"
      app:shapeAppearanceOverlay="@style/ShapeRound5"

      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
      android:id="@+id/whatsAppImageView"

      android:layout_width="28dp"
      android:layout_height="28dp"

      android:src="@drawable/ic_whatsapp_44"

      android:layout_margin="5dp"

      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <TextView
      android:id="@+id/nameTextView"

      android:layout_width="0dp"
      android:layout_height="wrap_content"

      style="@style/TextTajawalBold14"
      android:textColor="@color/colorPrimary"
      android:textDirection="locale"

      android:maxLines="1"
      android:ellipsize="end"

      tools:text="Abo Alaa"

      android:layout_marginStart="9dp"
      android:layout_marginEnd="9dp"
      android:layout_marginBottom="5dp"

      app:layout_constraintVertical_chainStyle="packed"

      app:layout_constraintTop_toTopOf="@id/imageView"
      app:layout_constraintStart_toEndOf="@id/imageView"
      app:layout_constraintEnd_toStartOf="@id/whatsAppImageView"
      app:layout_constraintBottom_toTopOf="@id/emailTextView"/>
    <TextView
      android:id="@+id/emailTextView"

      android:layout_width="0dp"
      android:layout_height="wrap_content"

      style="@style/TextTajawalBold14"
      android:textSize="11sp"
      android:textColor="@color/colorPrimary"
      android:textDirection="locale"

      android:maxLines="1"
      android:ellipsize="end"

      tools:text="Abo Alaa"

      android:layout_marginTop="5dp"
      android:layout_marginStart="2dp"
      android:layout_marginEnd="9dp"
      android:layout_marginBottom="5dp"

      app:layout_constraintTop_toBottomOf="@id/nameTextView"
      app:layout_constraintStart_toEndOf="@id/emailLabelTextView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/phoneTextView"/>
    <TextView
      android:id="@+id/emailLabelTextView"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      style="@style/TextTajawalMedium14"
      android:textSize="11sp"
      android:textColor="#727889"
      android:textDirection="locale"

      android:maxLines="1"
      android:ellipsize="end"

      tools:text="@string/email_hint_3"

      android:layout_marginStart="9dp"
      android:layout_marginEnd="0dp"

      android:drawablePadding="3dp"
      app:drawableStartCompat="@drawable/ic_mail_88"

      android:gravity="center"

      app:layout_constraintTop_toTopOf="@id/emailTextView"
      app:layout_constraintBottom_toBottomOf="@id/emailTextView"
      app:layout_constraintStart_toEndOf="@id/imageView"/>
    <TextView
      android:id="@+id/phoneTextView"

      android:layout_width="0dp"
      android:layout_height="wrap_content"

      style="@style/TextTajawalBold14"
      android:textSize="11sp"
      android:textColor="@color/colorPrimary"
      android:textDirection="locale"

      android:maxLines="1"
      android:ellipsize="end"

      tools:text="Abo Alaa"

      android:layout_marginTop="5dp"
      android:layout_marginStart="2dp"
      android:layout_marginEnd="9dp"
      android:layout_marginBottom="5dp"

      app:layout_constraintTop_toBottomOf="@id/emailTextView"
      app:layout_constraintStart_toEndOf="@id/phoneLabelTextView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="@id/imageView"/>
    <TextView
      android:id="@+id/phoneLabelTextView"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      style="@style/TextTajawalMedium14"
      android:textSize="11sp"
      android:textColor="#727889"
      android:textDirection="locale"

      android:maxLines="1"
      android:ellipsize="end"

      android:text="@string/phone_hint_3"

      android:layout_marginStart="9dp"
      android:layout_marginEnd="0dp"

      android:gravity="center"

      android:drawablePadding="3dp"
      app:drawableStartCompat="@drawable/ic_call_88"

      app:layout_constraintTop_toTopOf="@id/phoneTextView"
      app:layout_constraintBottom_toBottomOf="@id/phoneTextView"
      app:layout_constraintStart_toEndOf="@id/imageView"/>

    <TextView
      android:id="@+id/dateTextView"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      style="@style/TextTajawalMedium14"
      android:textSize="9sp"
      android:textColor="#727889"
      android:textDirection="locale"

      android:maxLines="1"
      android:ellipsize="end"

      tools:text="25 May 2022"

      android:layout_marginStart="9dp"
      android:layout_marginEnd="0dp"

      android:gravity="center"

      app:layout_constraintTop_toBottomOf="@id/imageView"
      app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
      android:id="@+id/labelCommentTextView"

      android:layout_width="0dp"
      android:layout_height="wrap_content"

      style="@style/TextTajawalMedium14"
      android:textColor="@color/colorPrimary"
      android:textDirection="locale"

      android:maxLines="1"
      android:ellipsize="end"

      android:text="@string/comment_8"

      android:layout_marginTop="14dp"
      android:layout_marginStart="15dp"
      android:layout_marginEnd="9dp"

      app:layout_constraintTop_toBottomOf="@id/imageView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatRatingBar
      android:id="@+id/ratingBar"

      android:layout_marginTop="7dp"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:numStars="5"
      android:progress="0"
      tools:progress="60"
      android:max="100"

      style="@style/Widget.AppCompat.RatingBar.Small"

      android:progressTint="#FFBC23"

      app:layout_constraintTop_toBottomOf="@id/labelCommentTextView"
      app:layout_constraintStart_toStartOf="@id/labelCommentTextView"/>

    <TextView
      android:id="@+id/commentTextView"

      android:layout_width="0dp"
      android:layout_height="wrap_content"

      android:layout_marginTop="12dp"
      android:layout_marginStart="15dp"
      android:layout_marginEnd="15dp"

      style="@style/TextTajawalMedium14"
      android:textSize="12sp"
      android:textDirection="locale"
      android:textColor="#727889"

      tools:text="هناك حقيقة مثبتة منذ زمن طويل وهي أن المحتوى المقروء لصفحة ما سيلهي القارئ عن التركيز على الشكل الخارجي للنص أو"

      app:layout_constraintTop_toBottomOf="@id/ratingBar"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
