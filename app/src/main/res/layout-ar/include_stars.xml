<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>
    <variable
      name="starCount"
      type="Integer" />
  </data>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="horizontal"

    android:layout_gravity="center">

    <ImageView
      android:id="@+id/star5Num1"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"


      tools:src="@drawable/star_disabled"
      android:src="@{starCount != null &amp;&amp; starCount >= 5 ? @drawable/star_enabled : @drawable/star_disabled}"/>
    <ImageView
      android:id="@+id/star5Num2"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_marginStart="11dp"

      tools:src="@drawable/star_disabled"
      android:src="@{starCount != null &amp;&amp; starCount >= 4 ? @drawable/star_enabled : @drawable/star_disabled}"/>
    <ImageView
      android:id="@+id/star5Num3"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_marginStart="11dp"

      tools:src="@drawable/star_disabled"
      android:src="@{starCount != null &amp;&amp; starCount >= 3 ? @drawable/star_enabled : @drawable/star_disabled}"/>
    <ImageView
      android:id="@+id/star5Num4"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_marginStart="11dp"

      tools:src="@drawable/star_enabled"
      android:src="@{starCount != null &amp;&amp; starCount >= 2 ? @drawable/star_enabled : @drawable/star_disabled}"/>
    <ImageView
      android:id="@+id/star5Num5"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:layout_marginStart="11dp"

      tools:src="@drawable/star_enabled"
      android:src="@{starCount != null &amp;&amp; starCount >= 1 ? @drawable/star_enabled : @drawable/star_disabled}"/>

  </LinearLayout>

</layout>
