<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/nav_ads"
  app:startDestination="@id/adsDetailsFragment">

  <fragment
    android:id="@+id/adsDetailsFragment"
    android:name="grand.app.moon.presentation.ads.AdsDetailsFragment"
    android:label="">
    <argument
      android:name="id"
      app:argType="integer" />
    <argument
      android:name="type"
      app:argType="integer" />
    <action
      android:id="@+id/action_adsDetailsFragment_to_reviewsFragment"
      app:destination="@id/reviewsFragment"
      app:enterAnim="@anim/anim_slide_in_right"
      app:exitAnim="@anim/anim_slide_out_left"
      app:popEnterAnim="@anim/anim_slide_in_left"
      app:popExitAnim="@anim/anim_slide_out_right" />
    <action
      android:id="@+id/action_adsDetailsFragment_to_reportDialog"
      app:destination="@id/reportDialog" />
    <action
      android:id="@+id/action_adsDetailsFragment_to_storeDetailsFragment3"
      app:destination="@id/storeDetailsFragment" />
    <argument
      android:name="from_store"
      android:defaultValue="false"
      app:argType="boolean" />
  </fragment>

  <fragment
    android:id="@+id/reviewsFragment"
    android:name="grand.app.moon.presentation.reviews.ReviewsFragment"
    android:label="@string/customers_reviews">
    <argument
      android:name="advertisement_id"
      app:argType="integer" />
    <argument
      android:name="rate"
      app:argType="string" />
    <argument
      android:name="store_id"
      app:argType="integer" />
    <action
      android:id="@+id/action_reviewsFragment_to_reviewDialog"
      app:destination="@id/reviewDialog" />

  </fragment>
  <dialog
    android:id="@+id/reviewDialog"
    android:name="grand.app.moon.presentation.reviews.ReviewDialog"
    android:label="@string/add_review">
    <argument
      android:name="advertisement_id"
      android:defaultValue="-1"
      app:argType="integer" />
    <argument
      android:name="store_id"
      android:defaultValue="-1"
      app:argType="integer" />
    <argument
      android:name="rate"
      app:argType="string" />
  </dialog>

  <dialog
    android:id="@+id/reportDialog"
    android:name="grand.app.moon.presentation.store.dialog.ReportDialog"
    android:label="@string/report_on_issue">
    <argument
      android:name="title"
      app:argType="string" />
    <argument
      android:name="type"
      app:argType="integer" />
    <argument
      android:name="advertisement_id"
      app:argType="integer" />
    <argument
      android:name="store_id"
      app:argType="integer" />

  </dialog>
  <fragment
    android:id="@+id/storeDetailsFragment"
    android:name="grand.app.moon.presentation.store.views.StoreDetailsFragment"
    android:label="">
    <argument
      android:name="id"
      app:argType="integer" />

  </fragment>


</navigation>