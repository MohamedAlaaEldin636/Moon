<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="BaseTextStyle">
    <item name="android:lineSpacingExtra">4dp</item>
  </style>

  <style name="TextTajawalBold14" parent="@style/BaseTextStyle">
    <item name="fontFamily">@font/tajawal_bold</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">#000000</item>
  </style>

  <style name="TextTajawalRegular14" parent="@style/BaseTextStyle">
    <item name="fontFamily">@font/tajawal_regular</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">#000000</item>
  </style>

  <style name="TextTajawalMedium14" parent="@style/BaseTextStyle">
    <item name="fontFamily">@font/tajawal_medium</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">#000000</item>
  </style>

  <style name="TextExtraLight14" parent="@style/BaseTextStyle">
    <item name="fontFamily">@font/extralight</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">#000000</item>
  </style>

  <style name="TextTajawalMedium16" parent="@style/TextTajawalMedium14">
    <item name="android:textSize">16sp</item>
  </style>

  <!-- Images -->

  <style name="ToolbarCurve">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">26dp</item>
    <item name="android:src">@drawable/ic_curve_filter</item>
    <item name="android:scaleType">fitXY</item>
  </style>

  <style name="TextTajawalRegular12" parent="@style/BaseTextStyle">
    <item name="fontFamily">@font/tajawal_regular</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">#000000</item>
  </style>


  <style name="FabAsRect">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">8dp</item>
  </style>


  <style name="EditTextForCreateShop" parent="@style/TextTajawalRegular14">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>

    <item name="android:layout_marginTop">16dp</item>

    <item name="android:background">@drawable/dr_rounded_5_text_field_2</item>

    <item name="android:textSize">13sp</item>
    <item name="android:textColor">#000000</item>
    <item name="android:textDirection">locale</item>
    <item name="android:textColorHint">#000000</item>
    <item name="android:padding">16dp</item>

    <item name="android:inputType">text</item>
  </style>
  <style name="EditTextForCreateShop.DropDown">
    <item name="android:drawablePadding">8dp</item>
    <item name="drawableEndCompat">@drawable/ic_arrown_down_for_create_shop</item>
  </style>

</resources>