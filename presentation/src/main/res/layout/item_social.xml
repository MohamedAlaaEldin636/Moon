<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <import type="com.structure.base_mvvm.domain.utils.Constants" />

    <variable
      name="notifyItemViewModels"
      type="com.structure.base_mvvm.presentation.teachers.viewModels.ItemSubjectsViewModel" />
  </data>


  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen4"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/ic_social"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/dimen6"
      android:padding="@dimen/dimen8"
      android:scaleType="centerCrop"
      android:src="@drawable/ic_social"
      app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/ic_social_value"
      android:layout_width="@dimen/dimen40"
      android:layout_height="@dimen/dimen40"
      android:layout_marginStart="@dimen/dimen40"
      android:layout_marginTop="@dimen/dimen6"
      android:src="@drawable/ic_insta"
      app:layout_constraintBottom_toBottomOf="@id/ic_social"
      app:layout_constraintStart_toStartOf="@id/ic_social"
      app:layout_constraintTop_toTopOf="@id/ic_social" />

    <androidx.appcompat.widget.AppCompatTextView
      style="@style/TextMediumFont"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/dimen40"
      android:layout_marginEnd="@dimen/dimen40"
      android:textAlignment="viewStart"
      android:textAppearance="@style/TextAppearance.AppCompat.Small"
      android:textColor="@color/black"
      android:text="www.facebook/tafawaq.com"
      app:layout_constraintBottom_toBottomOf="@id/ic_social"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/ic_social_value"
      app:layout_constraintTop_toTopOf="@id/ic_social" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>