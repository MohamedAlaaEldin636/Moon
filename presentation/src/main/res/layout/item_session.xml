<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

    <import type="com.structure.base_mvvm.presentation.base.utils.DateUtils" />

    <variable
      name="itemViewModels"
      type="com.structure.base_mvvm.presentation.group_details.viewModels.ItemSessionScheduledViewModel" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen4"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_session_date"
      style="@style/TextMediumFont"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/dimen8"
      android:drawableStart="@drawable/circle"
      android:drawablePadding="@dimen/dimen8"
      android:drawableTint="@color/colorPrimaryDark"
      android:text="@{itemViewModels.scheduled.scheduled}"
      android:textAlignment="viewEnd"
      android:textAppearance="@style/TextAppearance.AppCompat.Small"
      android:textColor="@color/black"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_session_time_from"
      style="@style/TextMediumFont"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/dimen8"
      android:layout_marginTop="@dimen/dimen7"
      android:layout_marginEnd="@dimen/dimen8"
      android:layout_marginBottom="@dimen/dimen7"
      android:text="@{itemViewModels.scheduled.start}"
      android:textAlignment="viewStart"
      android:textAppearance="@style/TextAppearance.AppCompat.Small"
      android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/tv_session_time_to"
      style="@style/TextMediumFont"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/dimen8"
      android:layout_marginTop="@dimen/dimen7"
      android:layout_marginEnd="@dimen/dimen8"
      android:layout_marginBottom="@dimen/dimen7"
      android:text="@{itemViewModels.scheduled.end}"
      android:textAlignment="viewStart"
      android:textAppearance="@style/TextAppearance.AppCompat.Small"
      android:textColor="@color/black" />

    <androidx.constraintlayout.helper.widget.Flow
      android:id="@+id/flow3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:constraint_referenced_ids="tv_session_date,tv_session_time_from,tv_session_time_to"
      app:flow_horizontalGap="@dimen/dimen4"
      app:flow_horizontalStyle="spread_inside"
      app:flow_wrapMode="aligned"
      app:layout_constraintTop_toTopOf="parent" />

    <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/dimen1"
      android:layout_marginTop="@dimen/dimen8"
      android:background="@color/lightGray"
      app:layout_constraintTop_toBottomOf="@id/flow3" />
  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>